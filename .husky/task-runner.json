{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "dotnet-format-staged-files",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": [ "format", "SFC.Player.sln", "--verbosity", "diagnostic", "--include", "${staged}" ],
      "include": [ "**/*.cs" ]
    },
    {
      "name": "dotnet-test",
      "group": "pre-push-operations",
      "command": "dotnet",
      "args": [ "test", "SFC.Player.sln", "--no-restore", "--no-build", "/p:CollectCoverage=true", "/p:CoverletOutput=../coverage/code_coverage", "/p:CoverletOutputFormat=opencover", "/p:Threshold=0", "/p:ThresholdStat=total" ]
    },
    {
      "name": "dotnet-build",
      "group": "pre-commit-operations",
      "command": "dotnet",
      "args": [ "build", "SFC.Player.sln", "--no-restore", "--configuration", "Release" ]
    },
    {
      "name": "dotnet-reportgenerator-create",
      "group": "pre-push-operations",
      "command": "reportgenerator",
      "args": [ "-reports:tests/coverage/code_coverage.opencover.xml", "-targetdir:tests/coverage/report", "-reporttypes:Html", "-assemblyfilters:+SFC.Player.Domain;+SFC.Player.Application;+SFC.Player.Infrastructure.Persistence;+SFC.Player.Infrastructure;+SFC.Player.Api" ]
    }
  ]
}
