{
  "ConnectionStrings": {
    "Database": "Server=sfc-mssql,1433;Database=Player;User Id=sfc;Password=Test1234!;TrustServerCertificate=True;",
    "RabbitMq": "rabbitmq://sfc-rabbitmq:5672",
    "Redis": "sfc-redis:6379"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://+:7365",
        "Protocols": "Http1"
      },
      "Https&Grpc": {
        "Url": "https://+:7366",
        "Protocols": "Http1AndHttp2"
      }
    },
    "Certificates": {
      "Default": {
        "Path": "/https/sfc-player.pfx",
        "Password": "Test1234!"
      }
    }
  },
  "Identity": {
    "Authority": "https://sfc-identity:7266",
    "Audience": "sfc.player",
    "RequireClaims": {
      "scope": [ "sfc.player.full" ]
    }
  },
  "Redis": {
    "User": "sfc",
    "Password": "Test1234!",
    "InstanceName": "SFC.Player"
  },
  "RabbitMq": {
    "Username": "sfc",
    "Password": "Test1234!",
    "Name": "SFC.Player",
    "Retry": {
      "Limit": 5,
      "Intervals": [ 1, 5, 10 ]
    },
    "Exchanges": {
      "Data": {
        "Key": "data",
        "Value": {
          "Data": {
            "Source": {
              "Initialized": {
                "Name": "sfc.data.initialized",
                "Type": "fanout"
              }
            }
          }
        }
      },
      "Identity": {
        "Key": "identity",
        "Value": {
          "Domain": {
            "User": {
              "Events": {
                "Created": {
                  "Name": "sfc.identity.user.created",
                  "Type": "fanout"
                }
              },
              "Seed": {
                "Seeded": {
                  "Name": "sfc.identity.users.seeded",
                  "Type": "fanout"
                },
                "Seed": {
                  "Name": "sfc.identity.users.seed",
                  "Type": "direct"
                },
                "RequireSeed": {
                  "Name": "sfc.identity.users.seed.require"
                }
              }
            }
          }
        }
      },
      "Player": {
        "Key": "player",
        "Value": {
          "Data": {
            "Dependent": {
              "Data": {
                "Initialize": {
                  "Name": "sfc.player.data.initialize"
                },
                "RequireInitialize": {
                  "Name": "sfc.player.data.initialize.require"
                }
              }
            }
          },
          "Domain": {
            "Player": {
              "Events": {
                "Created": {
                  "Name": "sfc.player.player.created",
                  "Type": "fanout"
                },
                "Updated": {
                  "Name": "sfc.player.player.updated",
                  "Type": "fanout"
                }
              },
              "Seed": {
                "Seeded": {
                  "Name": "sfc.player.players.seeded",
                  "Type": "fanout"
                },
                "Seed": {
                  "Name": "sfc.player.players.seed",
                  "Type": "direct"
                },
                "RequireSeed": {
                  "Name": "sfc.player.players.seed.require"
                }
              }
            }
          }
        }
      }
    }
  },
  "Cache": {
    "Enabled": true,
    "InstanceName": "SFC.Player",
    "AbsoluteExpirationInMinutes": 15,
    "SlidingExpirationInMinutes": 45
  },
  "Grpc": {
    "MaxReceiveMessageSizeInMb": 2,
    "MaxSendMessageSizeInMb": 4,
    "DeadLineInSeconds": 360,
    "Retry": {
      "MaxAttempts": 3,
      "InitialBackoffInSeconds": 1,
      "MaxBackoffInSeconds": 5,
      "BackoffMultiplier": 1.5
    },
    "Endpoints": {
      "Identity": {
        "Key": "identity",
        "Uri": "https://sfc-identity:7266",
        "Authentication": {
          "ClientId": "sfc.identity",
          "ClientSecret": "secret_sfc_identity",
          "Scopes": "sfc.identity.full"
        }
      }
    }
  }
}
